---
import PageLayout from '@/layouts/PageLayout.astro';
import Page_404 from '@hdud/common/pages/404.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';
import { siteConfig } from '@/site.config';
import { getI18n } from '@/i18n/index';

// Normaliza y valida el locale actual
const { currentLocale } = Astro;
const locale = currentLocale ?? '';


// Obtiene la instancia de i18n con el namespace 'design'
const i18n = await getI18n(locale, 'design');

// URLs traducidas según locale
const homeUrl = getRelativeLocaleUrl(locale, '/');
const ogImage = getRelativeLocaleUrl(locale, '/og-image/site-image.png');

// Metadatos de la página (propios del layout)
const meta = {
title: '404',
description: i18n('mate.description'),
author: siteConfig.author,
email: siteConfig.email,
locale,
ogImage,
};
---

<PageLayout {...meta}>
<Page_404 shows={i18n('page_404')} homeUrl={homeUrl} />
</PageLayout>
