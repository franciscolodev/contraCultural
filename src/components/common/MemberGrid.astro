---
import Image from '@/components/common/Image.tsx';

const { work } = Astro.props;

// ðŸ”§ Tipamos correctamente las entradas del objeto:
const members = Object.entries(work.data.members as Record<string, [number, number]>);
---

<div class="gap-1 pt-4 columns-1 sm:columns-2 xl:columns-3">
  {members.map(([mem, info]) => (
    <div class="overflow-hidden mb-1 shadow-xl">
      <Image
        client:load
        src={`${work.data.base}/${mem}`}
        imageInfo={{
          // âœ… Evita error si los valores no existen
          width: info?.[0] ?? 1,
          height: info?.[1] ?? 1
        }}
        classNames={{
          img: "transition duration-300 ease-in-out hover:scale-108"
        }}
      />
    </div>
  ))}
</div>
